<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_item_section"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/sectionBg"
        android:clickable="true"
        android:drawablePadding="7dp"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="7dp"
        android:shadowColor="@color/sectionShadow"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="@color/sectionColor"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:visibility="gone"
        app:drawableEndCompat="@drawable/section"
        app:drawableLeftCompat="@drawable/section"
        app:drawableRightCompat="@drawable/section"
        app:drawableStartCompat="@drawable/section" />

    <Button
        android:id="@+id/list_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="false"
        android:focusable="false"
        android:gravity="bottom|center_horizontal"
        android:padding="10dp"
        android:shadowColor="@color/buttonShadow"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="@color/buttonColor"
        android:textSize="24sp"
        android:textStyle="bold" />

</androidx.appcompat.widget.LinearLayoutCompat>