<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_window_focused="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/grey" android:startColor="@color/button_pressed" />
            <corners android:radius="3dp" />
            <padding android:bottom="12dp" android:left="7dp" android:right="7dp" android:top="7dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/grey" android:startColor="@color/button_pressed" />
            <corners android:radius="3dp" />
            <padding android:bottom="12dp" android:left="7dp" android:right="7dp" android:top="7dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/button_focused" android:startColor="@color/black" />
            <corners android:radius="3dp" />
            <padding android:bottom="12dp" android:left="7dp" android:right="7dp" android:top="7dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/button_default" android:startColor="@color/grey" />
            <corners android:radius="3dp" />
            <padding android:bottom="12dp" android:left="7dp" android:right="7dp" android:top="7dp" />
        </shape>
    </item>
</selector>